<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MillingApp.GroupSteelPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Black">

                <Label Text="Select a stell group " 
                   Style="{StaticResource labelSizeToolPage}">
                </Label>

                <Button x:Name="stell" Text="stell" Style="{StaticResource steel}" Clicked="Button_Clicked"></Button>
                <Button x:Name="stainless_stell" Text="stainless stell" Style="{StaticResource steel}" Clicked="stainless_stell_Clicked"></Button>
                <Button x:Name="cast_iron" Text="cast iron" Style="{StaticResource steel}" Clicked="cast_iron_Clicked"></Button>
                <Button x:Name="non_ferrous" Text="non-ferrous metals" Style="{StaticResource steel}" Clicked="non_ferrous_Clicked"></Button>
                <Button x:Name="heat_resistant" Text="heat-resistant steels" Style="{StaticResource steel}" Clicked="heat_resistant_Clicked"></Button>
                <Button x:Name="hard_metals" Text="hard materials" Style="{StaticResource steel}" Clicked="hard_metals_Clicked"></Button>

            </StackLayout>

        </ScrollView>

    </ContentPage.Content>
</ContentPage>